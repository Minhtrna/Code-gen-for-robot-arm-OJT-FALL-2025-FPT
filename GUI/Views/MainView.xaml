<UserControl x:Class="GUI.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel Margin="20">
        <TextBlock Text="{Binding StatusMessage}" 
                   FontSize="16" 
                   Foreground="DarkBlue" 
                   Margin="0 0 0 20"/>
        <Button Content="Connect Camera" 
                Width="150" Height="40" Margin="0 0 0 10"
                Command="{Binding ConnectCameraCommand}"/>
        <Button Content="Connect Robot" 
                Width="150" Height="40"
                Command="{Binding ConnectRobotCommand}"/>
    </StackPanel>
</UserControl>
