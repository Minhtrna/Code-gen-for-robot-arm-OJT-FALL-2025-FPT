<UserControl x:Class="GUI.Views.DeviceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Device Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Manage and connect to available devices" FontSize="14" Foreground="Gray"/>
        </StackPanel>
        
        <!-- Device List -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Available Devices -->
            <GroupBox Grid.Column="0" Header="Available Devices" Margin="0,0,10,0">
                <ListBox Name="DeviceListBox" ItemsSource="{Binding AvailableDevices}" 
                         SelectedItem="{Binding SelectedDevice}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="1" 
                                    CornerRadius="5" Margin="2" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Device Icon -->
                                    <Ellipse Grid.Column="0" Width="12" Height="12" 
                                             Fill="{Binding StatusColor}" Margin="0,0,10,0"/>
                                    
                                    <!-- Device Info -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Type}" FontSize="12" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Status}" FontSize="11" Foreground="{Binding StatusColor}"/>
                                    </StackPanel>
                                    
                                    <!-- Connection Status -->
                                    <TextBlock Grid.Column="2" Text="{Binding ConnectionStatus}" 
                                               FontSize="10" Foreground="Green" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
            
            <!-- Device Actions -->
            <GroupBox Grid.Column="1" Header="Device Actions">
                <StackPanel Margin="10">
                    <Button Content="Connect" Height="40" Margin="0,0,0,10"
                            Command="{Binding ConnectDeviceCommand}"
                            IsEnabled="{Binding CanConnect}"/>
                    <Button Content="Disconnect" Height="40" Margin="0,0,0,10"
                            Command="{Binding DisconnectDeviceCommand}"
                            IsEnabled="{Binding CanDisconnect}"/>
                    <Button Content="Refresh" Height="40" Margin="0,0,0,20"
                            Command="{Binding RefreshDevicesCommand}"/>
                    
                    <!-- Selected Device Info -->
                    <GroupBox Header="Selected Device" Margin="0,10,0,0">
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding SelectedDevice.Name, StringFormat='Name: {0}'}" Margin="0,2"/>
                            <TextBlock Text="{Binding SelectedDevice.Type, StringFormat='Type: {0}'}" Margin="0,2"/>
                            <TextBlock Text="{Binding SelectedDevice.Status, StringFormat='Status: {0}'}" Margin="0,2"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="LightGray" Padding="10" Margin="0,20,0,0">
            <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold"/>
        </Border>
    </Grid>
</UserControl>