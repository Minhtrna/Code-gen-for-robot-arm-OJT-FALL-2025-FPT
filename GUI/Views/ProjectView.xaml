<UserControl x:Class="GUI.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>  <!-- Left Column: Image View + AI Chat -->
            <ColumnDefinition Width="2*"/>  <!-- Right Column: Code Output + Controls -->
        </Grid.ColumnDefinitions>
        
        <!-- ===== LEFT COLUMN: Image View + AI Input ===== -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>  <!-- Image View (larger) -->
                <RowDefinition Height="1*"/>  <!-- AI Chat (smaller) -->
            </Grid.RowDefinitions>
            
            <!-- Image Analysis View -->
            <GroupBox Grid.Row="0" Header="Image Analysis" Margin="0,0,0,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Image Display -->
                    <Border Grid.Row="0" Background="Black" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Image Name="LiveViewImage" Source="{Binding LiveViewSource}" 
                                   Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            <!-- Placeholder when no image -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LiveViewSource}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="🖼️" FontSize="48" Foreground="Gray" 
                                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="No Image Loaded" 
                                          HorizontalAlignment="Center" 
                                          Foreground="Gray" FontSize="14"/>
                                <TextBlock Text="Click 'Load Image' to select a file" 
                                          HorizontalAlignment="Center" 
                                          Foreground="Gray" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Status Overlay -->
                            <Border Background="#AA000000" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                                   Margin="10" Padding="5">
                                <TextBlock Text="Image Analysis Mode" 
                                          Foreground="White" FontSize="12"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Image Controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <!-- Load Image Button -->
                        <Button Content="📁 Load Image" Margin="0,0,5,0" Padding="8,4"
                                Command="{Binding LoadImageCommand}"/>
                        
                        <!-- Save Button - enabled when image loaded -->
                        <Button Content="💾 Save" Margin="0,0,5,0" Padding="8,4"
                                Command="{Binding SaveImageCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LiveViewSource}" Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!-- Analyze Button - enabled when image loaded -->
                        <Button Content="🔍 Analyze" Padding="8,4"
                                Command="{Binding AnalyzeImageCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LiveViewSource}" Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </GroupBox>
            
            <!-- AI Chat Interface -->
            <GroupBox Grid.Row="1" Header="AI Assistant" Margin="0,5,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Chat History -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="5"
                                 Name="ChatScrollViewer">
                        <ItemsControl ItemsSource="{Binding ChatMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2" Padding="8" Background="LightBlue" 
                                           HorizontalAlignment="Right" MaxWidth="250">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFromUser}" Value="False">
                                                        <Setter Property="Background" Value="LightGray"/>
                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="12"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" 
                                                      FontSize="10" Foreground="Gray" HorizontalAlignment="Right" 
                                                      Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Chat Input -->
                    <Grid Grid.Row="1" Margin="5">
                        <TextBox Name="ChatInputBox" Height="50" 
                                 Text="{Binding ChatInput, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 KeyDown="ChatInputBox_KeyDown"/>
                        
                        <!-- Placeholder -->
                        <TextBlock Text="Ask AI about the image..." Foreground="Gray" 
                                  IsHitTestVisible="False" Margin="5,2,0,0" 
                                  VerticalAlignment="Top">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChatInput}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ChatInput}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    
                    <!-- Send Button -->
                    <Button Grid.Row="2" Content="💬 Send" Margin="5" Height="25"
                            Command="{Binding SendMessageCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ChatInput}" Value="">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ChatInput}" Value="{x:Null}">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- ===== RIGHT COLUMN: Code Output + Controls ===== -->
        <GroupBox Grid.Column="1" Header="Code Generation and Analysis" Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Control Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <ComboBox Width="100" Margin="0,0,10,0"
                              ItemsSource="{Binding AvailableLanguages}"
                              SelectedItem="{Binding SelectedLanguage}"/>
                    <Button Content="🔧 Generate Code" Command="{Binding GenerateCodeCommand}" Margin="0,0,5,0"/>
                    <Button Content="📋 Copy Code" Command="{Binding CopyCodeCommand}" Margin="0,0,5,0"/>
                    <Button Content="💾 Export" Command="{Binding ExportResultsCommand}" Margin="0,0,5,0"/>
                    <Button Content="🗑️ Clear" Command="{Binding ClearResultsCommand}" Margin="0,0,5,0"/>
                </StackPanel>
                
                <!-- Main Content Tabs -->
                <TabControl Grid.Row="1">
                    
                    <!-- Generated Code Tab -->
                    <TabItem Header="📄 Generated Code">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Code Info Panel -->
                            <Border Grid.Row="0" Background="LightGray" Padding="10" Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Language:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding SelectedLanguage}" Margin="0,0,20,0"/>
                                    <TextBlock Text="Status:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="Ready" Foreground="Green"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Code Editor -->
                            <TextBox Grid.Row="1" Text="{Binding GeneratedCode}" 
                                     FontFamily="Consolas" FontSize="12" 
                                     Margin="0" Padding="10"
                                     IsReadOnly="True" TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     Background="White"/>
                        </Grid>
                    </TabItem>
                    
                    <!-- Analysis Results Tab -->
                    <TabItem Header="🔍 Analysis Results">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Object Detection Results" FontWeight="Bold" 
                                          FontSize="16" Margin="0,0,0,15"/>
                                
                                <ItemsControl ItemsSource="{Binding AnalysisResults}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="LightGray" BorderThickness="1" 
                                                    Margin="0,0,0,8" Padding="10" Background="White">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Type Icon -->
                                                    <TextBlock Grid.Column="0" Text="🎯" FontSize="24" 
                                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                
                                                    <!-- Description -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Description}" FontWeight="Bold" FontSize="14"/>
                                                        <TextBlock Text="{Binding Type}" FontSize="12" Foreground="Gray"/>
                                                    </StackPanel>
                                                
                                                    <!-- Confidence -->
                                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding Confidence, StringFormat=P1}" 
                                                                  FontWeight="Bold" FontSize="14" Foreground="Green"/>
                                                        <TextBlock Text="Confidence" FontSize="10" Foreground="Gray"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Empty State -->
                                <Border BorderBrush="Gray" BorderThickness="2" 
                                       Padding="20" Background="LightGray" Margin="0,10,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding AnalysisResults.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="🔍" FontSize="48" Foreground="Gray" 
                                                  HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                        <TextBlock Text="No analysis results yet" FontSize="14" Foreground="Gray"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Load and analyze an image to see results" 
                                                  FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    
                    <!-- System Logs Tab -->
                    <TabItem Header="📋 System Logs">
                        <TextBox Text="{Binding LogMessages}" FontFamily="Consolas" 
                                 FontSize="11" IsReadOnly="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" Background="Black" 
                                 Foreground="White" Padding="10"/>
                    </TabItem>
                </TabControl>
                
                <!-- Progress Bar -->
                <ProgressBar Grid.Row="2" Height="4" Margin="0,5,0,0"
                             IsIndeterminate="{Binding IsProcessing}"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>