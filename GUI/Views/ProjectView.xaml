<UserControl x:Class="GUI.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Project Header -->
        <Border Grid.Row="0" Background="#2E3440" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Project Workspace" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding ProjectStatus}" FontSize="12" Foreground="LightGray"/>
            </StackPanel>
        </Border>
        
        <!-- Main Workspace -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>  <!-- Preview Area -->
                <ColumnDefinition Width="1*"/>  <!-- Chat Area -->
                <ColumnDefinition Width="2*"/>  <!-- Results Area -->
            </Grid.ColumnDefinitions>
            
            <!-- Vùng 1: Device Preview (Live View) -->
            <GroupBox Grid.Column="0" Header="Device Preview" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Camera/Robot Live View -->
                    <Border Grid.Row="0" Background="Black" CornerRadius="5">
                        <Grid>
                            <Image Name="LiveViewImage" Source="{Binding LiveViewSource}" 
                                   Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            <!-- Placeholder when no camera -->
                            <TextBlock Text="No Device Connected" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="White" FontSize="14"
                                       Visibility="{Binding HasLiveView, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </Border>
                    
                    <!-- Device Controls -->
                    <StackPanel Grid.Row="1" Margin="5">
                        <TextBlock Text="{Binding ConnectedDevice}" FontWeight="Bold" Margin="0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Start Preview" Margin="0,0,5,0" Padding="8,4"
                                    Command="{Binding StartPreviewCommand}"/>
                            <Button Content="Stop Preview" Padding="8,4"
                                    Command="{Binding StopPreviewCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>
            
            <!-- Vùng 2: Chat Box -->
            <GroupBox Grid.Column="1" Header="AI Assistant" Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Chat History -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="5">
                        <ItemsControl ItemsSource="{Binding ChatMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2" Padding="8" CornerRadius="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="LightBlue"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFromUser}" Value="False">
                                                        <Setter Property="Background" Value="LightGray"/>
                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Chat Input -->
                    <TextBox Grid.Row="1" Name="ChatInputBox" Height="60" Margin="5"
                             Text="{Binding ChatInput, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             KeyDown="ChatInputBox_KeyDown"/>
                    
                    <!-- Send Button -->
                    <Button Grid.Row="2" Content="Send Message" Margin="5" Height="30"
                            Command="{Binding SendMessageCommand}"/>
                </Grid>
            </GroupBox>
            
            <!-- Vùng 3: Model Results (Lớn nhất) -->
            <GroupBox Grid.Column="2" Header="Analysis Results" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Results Toolbar -->
                    <ToolBar Grid.Row="0" Margin="0,0,0,5">
                        <Button Content="Analyze Image" Command="{Binding AnalyzeImageCommand}"/>
                        <Button Content="Generate Code" Command="{Binding GenerateCodeCommand}"/>
                        <Button Content="Export Results" Command="{Binding ExportResultsCommand}"/>
                        <Separator/>
                        <Button Content="Clear" Command="{Binding ClearResultsCommand}"/>
                    </ToolBar>
                    
                    <!-- Results Display -->
                    <TabControl Grid.Row="1">
                        <!-- Code Generation -->
                        <TabItem Header="Generated Code">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                    <ComboBox Width="120" Margin="0,0,10,0"
                                              ItemsSource="{Binding AvailableLanguages}"
                                              SelectedItem="{Binding SelectedLanguage}"/>
                                    <Button Content="Copy Code" Command="{Binding CopyCodeCommand}"/>
                                </StackPanel>
                                
                                <TextBox Grid.Row="1" Text="{Binding GeneratedCode}" 
                                         FontFamily="Consolas" FontSize="12" Margin="5"
                                         IsReadOnly="True" TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"/>
                            </Grid>
                        </TabItem>
                        
                        <!-- Analysis Results -->
                        <TabItem Header="Analysis">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="10">
                                    <TextBlock Text="Detection Results:" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <ItemsControl ItemsSource="{Binding AnalysisResults}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="LightGray" BorderThickness="1" 
                                                        Margin="0,2" Padding="8" CornerRadius="3">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding Description}"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Confidence, StringFormat=P1}" 
                                                                   Foreground="Green" FontWeight="Bold"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        
                        <!-- Logs -->
                        <TabItem Header="Logs">
                            <TextBox Text="{Binding LogMessages}" FontFamily="Consolas" 
                                     IsReadOnly="True" TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"/>
                        </TabItem>
                    </TabControl>
                    
                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="2" Height="4" Margin="0,5,0,0"
                                 IsIndeterminate="{Binding IsProcessing}"
                                 Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>