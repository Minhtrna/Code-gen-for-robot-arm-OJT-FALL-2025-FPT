<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:GUI.Views"
        Title="Codegen" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <TabControl>
            <!-- Device Tab -->
            <TabItem Header="Device" FontSize="14" Padding="10,5">
                <views:DeviceView/>
            </TabItem>
            
            <!-- Project Tab -->
            <TabItem Header="Project" FontSize="14" Padding="10,5">
                <views:ProjectView/>
            </TabItem>
            
            <!-- Settings Tab (optional) -->
            <TabItem Header="Settings" FontSize="14" Padding="10,5">
                <views:SettingsView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
